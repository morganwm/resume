{
    "name": "Typst Resume",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "configureZshAsDefaultShell": true,
            "upgradePackages": true
        },
        "ghcr.io/devcontainers/features/rust:1": {
            "version": "latest"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "myriad-dreamin.tinymist",
                "elijah-potter.harper",
                "streetsidesoftware.code-spell-checker"
            ],
            "settings": {
                "tinymist.preview.refresh": "onSave",
                "tinymist.preview.feature": "tab",
                "harper.linters.LongSentences": false,
                "harper.linters.SpellCheck": false,
                "cSpell.words": [
                    "Ecommerce",
                    "Flink",
                    "VSTS"
                ]
            }
        }
    },
    "postCreateCommand": "sudo apt-get update && sudo apt-get install -y pkg-config libssl-dev && cargo install typst-cli",
    "remoteUser": "vscode"
}