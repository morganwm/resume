{
    "name": "Typst Resume",
    "image": "ghcr.io/typst/typst:latest",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "configureZshAsDefaultShell": true,
            "upgradePackages": true
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "myriad-dreamin.tinymist",
                "elijah-potter.harper",
                "streetsidesoftware.code-spell-checker"
            ],
            "settings": {
                "tinymist.preview.refresh": "onSave",
                "tinymist.preview.feature": "tab",
                "harper.linters.LongSentences": false,
                "harper.linters.SpellCheck": false,
                "harper.linters.OrthographicConsistency": false,
                "harper.linters.SplitWords": false,
                "cSpell.words": [
                    "dreamin",
                    "Ecommerce",
                    "Flink",
                    "VSTS"
                ]
            },
            "[typst-code]": {
                "editor.inlayHints.enabled": "on"
            }
        }
    },
    "postCreateCommand": "",
    "remoteUser": "vscode"
}